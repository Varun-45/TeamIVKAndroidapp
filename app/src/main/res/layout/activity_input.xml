<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Input"
    android:background="@drawable/img">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ExtraText">

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/Housing"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Housing Score"
            android:textColor="@color/lightBlue"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.113"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Financial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Financial  Score"
            android:textColor="@color/lightBlue"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.113"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button

            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="@color/white"
            android:onClick="finbal"
            android:text="NEXT"
            android:textColor="@color/deepBlue"
            android:textStyle="bold" />




        <ScrollView
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity=""
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="16dp"
                    android:elevation="5dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter Your Gender"
                            android:paddingLeft="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/lighterBlue"/>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:popupBackground="@color/white"
                            android:dropDownSelector="@color/deepBlue"
                            android:contentDescription="Enter Your Answer"
                            android:id="@+id/gender"

                            android:background="@android:drawable/btn_dropdown"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter Your Education"
                            android:paddingLeft="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/lighterBlue"/>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:contentDescription="Enter Your Answer"
                            android:popupBackground="@color/white"
                            android:id="@+id/education"
                            android:background="@android:drawable/btn_dropdown"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter Your Family Status"
                            android:paddingLeft="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/lighterBlue"/>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:popupBackground="@color/white"
                            android:contentDescription="Enter Your Answer"
                            android:id="@+id/family"
                            android:background="@android:drawable/btn_dropdown"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter Your Housing Status"
                            android:paddingLeft="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/lighterBlue"/>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:popupBackground="@color/white"
                            android:contentDescription="Enter Your Answer"
                            android:id="@+id/housing"
                            android:background="@android:drawable/btn_dropdown"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter Your Age"
                            android:paddingLeft="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/lighterBlue"/>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <EditText
                            android:id="@+id/age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter Your Annual Income"
                            android:paddingLeft="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/lighterBlue"/>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <EditText
                            android:id="@+id/income"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter the amount you invest monthly"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/lighterBlue"/>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <EditText
                            android:id="@+id/invest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter the no. of Bank AC's"
                            android:paddingLeft="10dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/lighterBlue"/>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <EditText
                            android:id="@+id/bank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>